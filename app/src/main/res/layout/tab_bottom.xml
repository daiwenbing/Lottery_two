<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/ll_bottom"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout android:gravity="center"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_shouye"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/img_shouye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_fx_02"/>
    <TextView
        android:id="@+id/txt_shouye"
        android:textColor="@color/hui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/TextSize_12"
        android:text="首页"/>
</LinearLayout>
    <LinearLayout android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_live"/>
        <TextView
            android:id="@+id/txt_live"
            android:textColor="@color/hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/TextSize_12"
            android:text="体彩信息"/>
    </LinearLayout>
<LinearLayout android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_zixun"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/img_zixun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_goucai"/>
    <TextView
        android:id="@+id/txt_zixun"
        android:textColor="@color/hui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/TextSize_12"
        android:text="竞彩资讯"/>
</LinearLayout>
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_wode"/>
    <TextView
        android:id="@+id/txt_more"
        android:textColor="@color/hui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/TextSize_12"
        android:text="更多"/>
</LinearLayout>
</LinearLayout>
